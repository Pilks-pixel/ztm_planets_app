{
  "name": "nasa-project-server",
  "version": "1.0.0",
  "description": "A server for NASA project API",
  "main": "src/server.ts",
  "scripts": {
    "start": "node --watch --experimental-strip-types src/server.ts",
    "test": "jest",
    "test-watch": "jest --watch",
    "check-types": "tsc",
    "format": "prettier --write \"**/*.+(.js|ts|json)\"",
    "lint": "eslint .",
    "validate": "npm run check-types && npm run lint && npm run format"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "tsconfig.json",
          "diagnostics": {
            "warnOnly": true
          },
          "astTransformers": {
            "before": [
              {
                "path": "node_modules/ts-jest-mock-import-meta",
                "options": {
                  "metaObjectReplacement": {
                    "url": "file:///Users/peterpilkington/Documents/code_practice/ztm_node/planets_app/server/src/model/planets.ts"
                  }
                }
              }
            ]
          }
        }
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.21.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "ts-jest-mock-import-meta": "^1.2.1",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.24.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "express": "^4.21.2",
    "morgan": "^1.10.0"
  }
}
